<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
<link rel="stylesheet" type="text/css" href="stylesheets/style.css">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title></title>

</head>
<body style="background-image:url('images/thegym.jpg')">
	<div id="alldiv">
		<div id="text" style="width: calc(100% - 240px);">
			<textarea rows="40" id="data" style="width: 100%;height:75%;font-size: 100%;background-color: #F3F3F5;" data-role="none"><%= data %></textarea><p>
			<button onclick="copy()" style="width: 20%;height: 5%;font-size: 100%;background-color: #F3F3F5;">Copy to Clipboard</button>
        	</div>
	</div>
	<script>
        function copy() {
            let elem= document.getElementById("data");		
            elem.select();
            document.execCommand('copy');				
        }
  </script>

</body>
</html>
